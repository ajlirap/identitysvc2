APP_NAME=IdentitySvc
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=sqlite

IDENTITY_VENDOR=keycloak

# Keycloak endpoints (local docker on 8080)
KC_REALM=myrealm
KC_BASE_URL=http://localhost:8081
KC_CLIENT_ID=identitysvc-client
KC_CLIENT_SECRET=replace-with-secret
KC_REDIRECT_URI=http://localhost:8000/api/auth/callback
KC_ISSUER=http://localhost:8081/realms/myrealm
KC_JWKS_URI=http://localhost:8081/realms/myrealm/protocol/openid-connect/certs
KC_ADMIN_USER=svc-admin
KC_ADMIN_PASS=replace-with-password

# Common JWT settings
ID_AUDIENCE=api://identitysvc
ID_JWT_LEEWAY=60
ID_JWKS_TTL=3600

# --- Logging ---
LOG_CHANNEL=stack
LOG_STACK=stderr,daily
LOG_LEVEL=info
LOG_FORMAT=json # json|line
LOG_DAILY_DAYS=14
APP_TIMEZONE=UTC

# HTTP logging toggles
LOG_HTTP_ALL_ROUTES=false
LOG_HTTP_REQUEST_BODY=false
LOG_HTTP_RESPONSE_BODY=false
LOG_HTTP_MAX_BODY=2048
LOG_HTTP_DRIVER=daily
LOG_HTTP_LEVEL=info
LOG_HTTP_DAYS=7
